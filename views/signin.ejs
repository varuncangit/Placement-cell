<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('bootstrapMeta')%>

		<title>Sign In</title>
	</head>
	<body style="background-color: #e6e9e9">
		<%- include('header')%>
		<div
			class="w-50 mx-auto mt-5"
			style="
				height: 60vh;
				display: grid;
				place-content: center;
				width: 530px;
				background: rgb(255, 255, 255);
				border-radius: 5px;
				box-shadow: 7px 7px 12px rgba(0, 0, 0, 0.05);
			"
		>
			<div class="mx-auto mt-3 mb-3" style="width: 100px">
				<h4>Sign In</h4>
			</div>

			<form action="/users/create-session" method="POST" style="width: 300px">
				<!-- Email input -->
				<div class="form-outline mb-4">
					<label class="form-label" for="email">Email</label>
					<input type="email" class="form-control" id="email" placeholder="email@email.com" name="email" required />
				</div>

				<!-- Password input -->
				<div class="form-outline mb-4">
					<label class="form-label" for="password">Enter Password</label>
					<input type="password" id="password" class="form-control" name="password" required />
				</div>

				<!-- Submit button -->
				<button type="submit" class="btn btn-success btn-block mb-4">Sign in</button>

				<!-- Register buttons -->
				<div class="text-center">
					<p>No Account? <a href="/users/signup">Register</a></p>
				</div>
			</form>
		</div>
		<%- include('bootstrapScript')%>
	</body>
</html>
